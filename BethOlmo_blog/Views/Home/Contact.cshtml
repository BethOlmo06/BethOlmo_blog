<body>

    @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.FromName, new { @class = "col-2 control-label" })
                <div class="col-10">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-1 control-label" })
                <div class="col-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "col-2 control-label" })
                <div class="col-10">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Body, new { @class = "col-2 control-label" })
                <div class="col-10">
                    @Html.TextBoxFor(m => m.Body, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Body)
                </div>
            </div>
            <div class="form-group">
                <div class="col-offset-2 col-10">
                    <input type="submit" class="btn btn-primary" value="Send" />
                </div>
            </div>
        }


    @*NICE CONTACT FORM THAT DOESN'T YET WORK*@
    <div class="container-contact100">
        <div class="wrap-contact100">
            <form class="contact100-form validate-form">
                    <span class="contact100-form-title">
                        Send Me A Message
                    </span>
                    <label class="label-input100" for="first-name">Tell me your name *</label>
                    <div class="wrap-input100 rs1-wrap-input100">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "First" })
                        @Html.ValidationMessageFor(m => m.FromName)
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 rs2-wrap-input100">
                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Last" })
                        @Html.ValidationMessageFor(m => m.FromName)
                        <span class="focus-input100"></span>
                    </div>

                    <label class="label-input100" for="email">Enter your email *</label>
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
                        @Html.ValidationMessageFor(m => m.FromEmail)
                        <span class="focus-input100"></span>
                    </div>

                    <label class="label-input100" for="message">Message *</label>
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.Body, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Body)
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-contact100-form-btn">
                        <input type="submit" class="contact100-form-btn" value="Send Message" />
                    </div>
                </form>

                <div class="contact100-more flex-col-c-m" style="background-image:url(/Images/Contact_560x853.png)">
                    <div class="flex-w size1 p-b-47">
                        <div class="txt1 p-r-25">
                            <span class="lnr lnr-map-marker"></span>
                        </div>

                        <div class="flex-col size2">
                            <span class="txt1 p-b-20">
